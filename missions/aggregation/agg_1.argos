<?xml version="1.0" ?>
<argos-configuration>
  <!-- ************* -->
  <!-- * Framework * -->
  <!-- ************* -->
  <framework>
    <experiment length="0"
                ticks_per_second="10" random_seed="1"/>
  </framework>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions library="/home/rtodesco/rvr-loop-functions/build/loop-functions/rvr-pow/aggregation/librvr_pow_aggregation_loopfunc.so"
   label="aggregation_one_spot_loop_functions">
    <params dist_radius="1.2" number_robots="5"/>
  </loop_functions>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <!-- TRANSMITTER -->
    <automode_controller id="automode"
                        library="/home/rtodesco/ARGoS3-AutoMoDe/build/src/libautomode.so">
      <actuators>
        <rvr_wheels implementation="default"/>
        <rvr_rgb_leds implementation="default" medium="leds"/>
      </actuators>
      <sensors>
        <rvr_proximity implementation="default" range="0.4" show_rays="false"/>
        <rvr_light implementation="default" show_rays="false"/>
        <rvr_lidar implementation="default" show_rays="false"/>
        <rvr_ground implementation="rot_z_only"/>
	      <colored_blob_omnidirectional_camera implementation="rot_z_only" medium="leds" show_rays="false" />
      </sensors>
    <params fsm-config="--nstates 4 --s0 1 --n0 3 --n0x0 1 --c0x0 6 --p0x0 0.45 --l0x0 1 --n0x1 1 --c0x1 1 --p0x1 0.43 --n0x2 1 --c0x2 1 --p0x2 0.36 --s1 0 --rwm1 48 --n1 2 --n1x0 2 --c1x0 4 --p1x0 3 --w1x0 19.66 --n1x1 2 --c1x1 4 --p1x1 6 --w1x1 15.44 --s2 0 --rwm2 89 --n2 4 --n2x0 0 --c2x0 0 --p2x0 0.36 --n2x1 2 --c2x1 1 --p2x1 0.14 --n2x2 0 --c2x2 6 --p2x2 0.44 --l2x2 3 --n2x3 0 --c2x3 3 --p2x3 10 --w2x3 1.27 --s3 0 --rwm3 6 --n3 2 --n3x0 2 --c3x0 0 --p3x0 0.6 --n3x1 2 --c3x1 6 --p3x1 0.53 --l3x1 3" real-robot="true" velocity="30"/>
  </automode_controller>
  </controllers>

  <!-- ********* -->
  <!-- * Arena * -->
  <!-- ********* -->
  <arena size="10, 10, 2" center="0,0,0">

  <!-- Change the floor here -->
  <floor id="floor" source="loop_functions" pixels_per_meter="300"/>

  <!-- Change the light here -->
  <light id="light" position="0,-4.25,0.75" orientation="0,0,0" color="yellow" intensity="0.0" medium="leds"/>

  <!--Dodecagonal arena with side of length .66-->
  <box id="wall_1" size="0.01,.66,0.08" movable="false">
    <body position="-1.231,0,0" orientation="0,0,0"/>
  </box>
  <box id="wall_2" size="0.01,.66,0.08" movable="false">
    <body position="1.231,0,0" orientation="0,0,0"/>
  </box>
  <box id="wall_3" size="0.01,.66,0.08" movable="false">
    <body position="0,1.231,0" orientation="90,0,0"/>
  </box>
  <box id="wall_4" size="0.01,.66,0.08" movable="false">
    <body position="0,-1.231,0" orientation="90,0,0"/>
  </box>
  <box id="wall_5" size="0.01,.66,0.08" movable="false">

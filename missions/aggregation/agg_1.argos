  <!-- The epucks are distributed by the loop functions. -->
  <rvr id="rvr_01_30">
    <body orientation="0,0,0" position="0,-0.4,0" />
    <controller config="automode" />
  </rvr>
  <rvr id="rvr_02_40">
    <body orientation="0,0,0" position="0.4,-0.6,0" />
